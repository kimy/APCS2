public class LNode {

    private int value;
    private LNode next;

    public LNode(int val){
	setValue(val);
    }

    public LNode(int val, LNode nex){
	setValue(val);
	setNext(nex);
    }

    public void setValue(int val){
	value = val;
    }

    public int getValue(){
	return value;
    }

    public void setNext(LNode n){
	next = n;
    }

    public LNode getNext(){
	return next;
    }

    public String toString(){
	return "" + value;

    }


}